<resources>
    <style name="AppBaseTheme" parent="DevenTheme"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="AppTheme2" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="DevenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorControlNormal">@color/my_control_normal_color</item>
        <item name="colorControlActivated">@color/my_control_activated_color</item>
        <item name="colorControlHighlight">@color/my_control_highlight_color</item>
        <item name="android:typeface">serif</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="alertDialogTheme">@style/IshiDialogTheme</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
    </style>

    <style name="CustomActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@drawable/toolbar_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="IshiDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/my_control_normal_color</item>
        <item name="colorControlActivated">@color/my_control_activated_color</item>
        <item name="colorControlHighlight">@color/my_control_highlight_color</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
